<p id="notice"><%= notice %></p>

<h1>My Wallets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_wallets.each do |my_wallet| %>
      <tr>
        <td><%= my_wallet.user_id %></td>
        <td><%= my_wallet.balance %></td>
        <td><%= link_to 'Show', my_wallet %></td>
        <td><%= link_to 'Edit', edit_my_wallet_path(my_wallet) %></td>
        <td><%= link_to 'Destroy', my_wallet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New My Wallet', new_my_wallet_path %>
